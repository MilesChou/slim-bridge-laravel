{
    "name": "mileschou/slim-bridge-laravel",
    "description": "The bridge for Laravel in Slim framework",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=5.5",
        "slim/slim": "^3.0",
        "laravel/framework": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4 | ^5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\LaravelBridger\\Slim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
