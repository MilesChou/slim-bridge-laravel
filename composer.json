{
    "name": "laravel-bridge/slim",
    "description": "The Laravel Bridge use on Slim framework",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=5.5",
        "ext-json": "*",
        "guzzlehttp/psr7": "^1.5",
        "recca0120/laravel-bridge": "^1.1",
        "slim/slim": "^3.0",
        "symfony/psr-http-message-bridge": "^1",
        "zendframework/zend-diactoros": "^1"
    },
    "require-dev": {
        "php-coveralls/php-coveralls": "^2.1",
        "phpunit/phpunit": "^4 | ^5 | ^6",
        "psy/psysh": "^0.9.9",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "LaravelBridge\\Slim\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
