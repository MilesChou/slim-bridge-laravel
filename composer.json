{
    "name": "laravel-bridge/slim",
    "description": "The Laravel Bridge use on Slim framework",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Miles",
            "email": "jangconan@gmail.com",
            "homepage": "https://mileschou.github.io/",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "http-interop/http-factory-slim": "^2.0",
        "illuminate/container": "^5.6 | ^6 | ^7",
        "illuminate/support": "^5.6 | ^6 | ^7",
        "laravel-bridge/container": "^1.1.0",
        "laravel-bridge/scratch": "^0.9.2",
        "laravel-bridge/support": "^0.5.0",
        "psr/container": "^1.0",
        "psr/http-factory": "^1.0",
        "slim/slim": "^3.0",
        "symfony/debug": "^4.4 | ^5",
        "symfony/psr-http-message-bridge": "^1.3 | ^2.0"
    },
    "suggest": {
        "illuminate/config": "Suggest when use Laravel settings",
        "illuminate/http": "Suggest when use Laravel or Symfony request instance"
    },
    "require-dev": {
        "illuminate/config": "^5.6 | ^6 | ^7",
        "illuminate/http": "^5.6 | ^6 | ^7",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^7 | ^8 | ^9",
        "psy/psysh": "^0.9.12",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "LaravelBridge\\Slim\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
