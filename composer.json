{
    "name": "laravel-bridge/slim",
    "description": "The Laravel Bridge use on Slim framework",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Miles",
            "email": "jangconan@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "illuminate/config": "^5.5 | ^6 | ^7",
        "illuminate/container": "^5.5 | ^6 | ^7",
        "illuminate/http": "^5.5 | ^6 | ^7",
        "illuminate/support": "^5.5 | ^6 | ^7",
        "laminas/laminas-diactoros": "^2.2",
        "laravel-bridge/scratch": "^0.7.0",
        "laravel-bridge/support": "^0.2.0",
        "psr/container": "^1.0",
        "psr/http-factory": "^1.0",
        "slim/slim": "^3.0",
        "symfony/debug": "^4.4 | ^5",
        "symfony/psr-http-message-bridge": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7 | ^8",
        "psy/psysh": "^0.9.12",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "LaravelBridge\\Slim\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}
